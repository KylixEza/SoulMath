<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SoulMath"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoulMath">
        <activity
            android:name=".presentation.ui.game.hard.HardGameActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.game.medium.MediumGameActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.game.easy.EasyGameActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.material.video.MaterialVideoPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.material.reward.MaterialRewardActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.material.dashboard.MaterialDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.material.onboard.MaterialOnBoardActivity"
            android:exported="false" />
        <activity
            android:name="com.ramiyon.soulmath.presentation.ui.auth.AuthActivity"
            android:exported="false" />
        <activity
            android:name="com.ramiyon.soulmath.presentation.ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.MainActivity"
            android:exported="true" />
    </application>

</manifest>