<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_add_on_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/ic_profile_add_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_add_on_behaviour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:textColor="@color/neutral_600"
        app:layout_constraintTop_toTopOf="@id/iv_add_on_icon"
        app:layout_constraintStart_toEndOf="@id/iv_add_on_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_add_on_icon"
        tools:text="Ubah Profil"/>

    <ImageView
        android:id="@+id/iv_arrow_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_next_ios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_add_on_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_add_on_icon"/>

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/iv_add_on_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>