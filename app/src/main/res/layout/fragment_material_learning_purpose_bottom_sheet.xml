<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_view_material_onboard"
    tools:context=".presentation.ui.material.onboard.screens.second.MaterialLearningPurposeBottomSheetFragment">

    <TextView
        android:id="@+id/tv_learning_purpose_chapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="92dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/neutral_900"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Tujuan Pembelajaran Bab Pengenalan Angka"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_learning_purpose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_learning_purpose_chapter"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>