<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- First Rank-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_first_rank"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/white"
        tools:src="@drawable/ic_default_ava"/>

    <ImageView
        android:id="@+id/iv_first_rank_emblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rank_first"
        android:layout_marginBottom="-8dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar_first_rank"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar_first_rank"/>

    <TextView
        android:id="@+id/tv_username_first_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/work_sans_medium"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_first_rank"
        app:layout_constraintStart_toStartOf="@id/iv_avatar_first_rank"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar_first_rank"
        tools:text="Arsheina Dimitry"/>

    <TextView
        android:id="@+id/tv_xp_first_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintStart_toStartOf="@id/tv_username_first_rank"
        app:layout_constraintTop_toBottomOf="@id/tv_username_first_rank"
        app:layout_constraintEnd_toEndOf="@id/tv_username_first_rank"
        tools:text="2550 XP"/>
    
    <!-- Second Rank-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_second_rank"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="42dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="4dp"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_first_rank"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_default_ava"/>

    <ImageView
        android:id="@+id/iv_second_rank_emblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:src="@drawable/ic_rank_second"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar_second_rank"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar_second_rank"/>

    <TextView
        android:id="@+id/tv_username_second_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/work_sans_medium"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_second_rank"
        app:layout_constraintStart_toStartOf="@id/iv_avatar_second_rank"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar_second_rank"
        tools:text="Evangeline"/>

    <TextView
        android:id="@+id/tv_xp_second_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintStart_toStartOf="@id/tv_username_second_rank"
        app:layout_constraintTop_toBottomOf="@id/tv_username_second_rank"
        app:layout_constraintEnd_toEndOf="@id/tv_username_second_rank"
        tools:text="2450 XP"/>

    <!-- Third Rank-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_third_rank"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="42dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="4dp"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_first_rank"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_default_ava"/>

    <ImageView
        android:id="@+id/iv_third_rank_emblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:src="@drawable/ic_rank_third"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar_third_rank"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar_third_rank"/>

    <TextView
        android:id="@+id/tv_username_third_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/work_sans_medium"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_third_rank"
        app:layout_constraintStart_toStartOf="@id/iv_avatar_third_rank"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar_third_rank"
        tools:text="David Kim"/>

    <TextView
        android:id="@+id/tv_xp_third_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintStart_toStartOf="@id/tv_username_third_rank"
        app:layout_constraintTop_toBottomOf="@id/tv_username_third_rank"
        app:layout_constraintEnd_toEndOf="@id/iv_avatar_third_rank"
        tools:text="2450 XP"/>

</androidx.constraintlayout.widget.ConstraintLayout>