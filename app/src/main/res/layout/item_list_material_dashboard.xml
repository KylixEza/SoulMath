<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_material_content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/iv_material"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                tools:src="@drawable/material_image_example"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_material_sub_module"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/primary_50"
                android:padding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14sp"
                android:textColor="@color/neutral_900"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@id/iv_material"
                app:layout_constraintEnd_toEndOf="@id/iv_material"
                tools:text="Lihat Video Satu Angka"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_material_path"
        android:layout_width="170dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toBottomOf="@id/cv_material_content_container"
        app:layout_constraintStart_toStartOf="@id/cv_material_content_container"
        app:layout_constraintEnd_toEndOf="@id/cv_material_content_container"
        tools:src="@drawable/ic_material_dashboard_path_left_to_right"/>

</androidx.constraintlayout.widget.ConstraintLayout>