<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.home.HomeFragment">

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:backgroundTint="@color/primary_blue"
        app:shape_clip_drawable="@color/primary_blue"
        app:shape_roundRect_bottomLeftRadius="36dp"
        app:shape_roundRect_bottomRightRadius="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/example_greeting"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_notification_background"
        android:src="@drawable/ic_notification"
        app:layout_constraintTop_toTopOf="@id/tv_greeting"
        app:layout_constraintBottom_toBottomOf="@id/tv_greeting"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_have_you_studied_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/have_you_studied_today"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/holder_progress_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_have_you_studied_today"
        app:layout_constraintEnd_toEndOf="parent">
        <include
            android:id="@+id/include_progress_report"
            layout="@layout/include_progress_report"/>
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/holder_material"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/soft_rose_red"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="@id/holder_progress_report"
        app:layout_constraintTop_toBottomOf="@id/holder_progress_report">
        <TextView
            android:id="@+id/tv_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:drawablePadding="26dp"
            app:drawableEndCompat="@drawable/ic_book_white" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/holder_quiz"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/soft_rose_red"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@id/holder_progress_report"
        app:layout_constraintTop_toTopOf="@id/holder_material"
        app:layout_constraintBottom_toBottomOf="@id/holder_material">
        <TextView
            android:id="@+id/tv_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:drawablePadding="26dp"
            app:drawableEndCompat="@drawable/ic_quiz_white"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_last_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/last_material"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="@id/tv_greeting"
        app:layout_constraintTop_toBottomOf="@id/holder_material"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_last_material"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_last_material"
        app:layout_constraintTop_toBottomOf="@id/tv_last_material"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>