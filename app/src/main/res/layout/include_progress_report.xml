<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/secondary_blue"
    android:layout_margin="2dp"
    android:elevation="8dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iv_progress_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_progress_report"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_progress_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:text="@string/your_progress_report"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/iv_progress_report"
            app:layout_constraintStart_toEndOf="@id/iv_progress_report"
            app:layout_constraintBottom_toBottomOf="@id/iv_progress_report"/>

        <ImageView
            android:id="@+id/iv_arrow_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:src="@drawable/ic_arrow_next_blue"
            app:layout_constraintStart_toEndOf="@id/tv_progress_report"
            app:layout_constraintTop_toTopOf="@id/tv_progress_report"
            app:layout_constraintBottom_toBottomOf="@id/tv_progress_report"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>