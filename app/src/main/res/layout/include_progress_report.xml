<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:elevation="8dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <ImageView
            android:id="@+id/iv_progress_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_progress_report"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_progress_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:text="@string/your_progress_report"
            app:layout_constraintTop_toTopOf="@id/iv_progress_report"
            app:layout_constraintStart_toEndOf="@id/iv_progress_report"
            app:layout_constraintBottom_toBottomOf="@id/iv_progress_report"/>

        <ImageView
            android:id="@+id/iv_arrow_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:src="@drawable/ic_arrow_next_blue"
            app:layout_constraintStart_toEndOf="@id/tv_progress_report"
            app:layout_constraintTop_toTopOf="@id/tv_progress_report"
            app:layout_constraintBottom_toBottomOf="@id/tv_progress_report"/>

        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="@color/soft_light_gray"
            app:layout_constraintStart_toStartOf="@id/iv_progress_report"
            app:layout_constraintTop_toBottomOf="@id/iv_progress_report"
            app:layout_constraintEnd_toEndOf="@id/iv_arrow_next"/>

        <FrameLayout
            android:id="@+id/holder_include_material_progress_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/separator"
            app:layout_constraintStart_toStartOf="@id/separator">
            <include
                android:id="@+id/include_material_progress_report"
                layout="@layout/include_material_progress_report"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/holder_include_material_progress_report"
            app:layout_constraintEnd_toEndOf="@id/separator"
            app:layout_constraintBottom_toBottomOf="@id/holder_include_material_progress_report">
            <include
                android:id="@+id/include_xp_progress_report"
                layout="@layout/include_xp_progress_report"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>