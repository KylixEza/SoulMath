<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <com.google.android.material.button.MaterialButton
       android:id="@+id/btn_first_answer"
       android:layout_width="0dp"
       android:layout_height="64dp"
       android:layout_marginEnd="12dp"
       style="@style/Widget.MaterialComponents.Button.OutlinedButton"
       app:cornerRadius="24dp"
       app:strokeColor="@color/primary_700"
       app:strokeWidth="1dp"
       android:fontFamily="@font/poppins"
       android:textSize="12sp"
       android:textColor="@color/black"
       android:textAllCaps="false"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/btn_second_answer"
       app:layout_constraintTop_toTopOf="parent"/>

   <com.google.android.material.button.MaterialButton
       android:id="@+id/btn_second_answer"
       android:layout_width="0dp"
       android:layout_height="64dp"
       android:layout_marginEnd="12dp"
       style="@style/Widget.MaterialComponents.Button.OutlinedButton"
       app:cornerRadius="24dp"
       app:strokeColor="@color/primary_700"
       app:strokeWidth="1dp"
       android:fontFamily="@font/poppins"
       android:textSize="12sp"
       android:textColor="@color/black"
       android:textAllCaps="false"
       app:layout_constraintStart_toEndOf="@id/btn_first_answer"
       app:layout_constraintEnd_toStartOf="@id/btn_third_answer"
       app:layout_constraintTop_toTopOf="@id/btn_first_answer"/>

   <com.google.android.material.button.MaterialButton
       android:id="@+id/btn_third_answer"
       android:layout_width="0dp"
       android:layout_height="64dp"
       android:layout_marginEnd="12dp"
       style="@style/Widget.MaterialComponents.Button.OutlinedButton"
       app:cornerRadius="24dp"
       app:strokeColor="@color/primary_700"
       app:strokeWidth="1dp"
       android:fontFamily="@font/poppins"
       android:textSize="12sp"
       android:textColor="@color/black"
       android:textAllCaps="false"
       app:layout_constraintStart_toEndOf="@id/btn_second_answer"
       app:layout_constraintEnd_toStartOf="@id/btn_fourth_answer"
       app:layout_constraintTop_toTopOf="@id/btn_second_answer"/>

   <com.google.android.material.button.MaterialButton
       android:id="@+id/btn_fourth_answer"
       android:layout_width="0dp"
       android:layout_height="64dp"
       style="@style/Widget.MaterialComponents.Button.OutlinedButton"
       app:cornerRadius="24dp"
       app:strokeColor="@color/primary_700"
       app:strokeWidth="1dp"
       android:fontFamily="@font/poppins"
       android:textSize="12sp"
       android:textColor="@color/black"
       android:textAllCaps="false"
       app:layout_constraintStart_toEndOf="@id/btn_third_answer"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="@id/btn_third_answer"/>

</androidx.constraintlayout.widget.ConstraintLayout>