<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_gif"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_support_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/primary_900"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/iv_gif"
        app:layout_constraintStart_toStartOf="@id/iv_gif"
        app:layout_constraintTop_toBottomOf="@id/iv_gif"
        tools:text="Yah, jawabanmu belum benar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/primary_blue"
        android:drawableEnd="@drawable/ic_circle_next"
        android:drawablePadding="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingHorizontal="24dp"
        android:paddingVertical="14dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_support_result" />

</androidx.constraintlayout.widget.ConstraintLayout>